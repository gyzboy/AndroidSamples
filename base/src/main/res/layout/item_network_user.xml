<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/network_item_iv_user_picture"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/network_item_tv_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/network_item_iv_user_picture"
        android:padding="8dp"
        android:textSize="24sp"
        tools:text="Sample name"/>

    <TextView
        android:id="@+id/network_item_tv_user_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/network_item_tv_user_name"
        android:layout_toEndOf="@id/network_item_iv_user_picture"
        android:padding="8dp"
        android:textSize="18sp"
        tools:text="Sample login"/>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/network_item_tv_user_login"
        android:background="@android:color/holo_blue_dark"/>

    <TextView
        android:id="@+id/network_item_tv_user_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider"
        android:padding="8dp"
        android:textSize="14sp"
        tools:text="http://github.com/user"/>
</RelativeLayout>